{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@icons": ["src/assets/icons/index.js"],
      "@images": ["src/assets/images/index.js"],
      "@components": ["src/components/index.js"],
      "@hooks/*": ["src/hooks/*"],
      "@layouts/*": ["src/layouts/*"],
